<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="uk.co.massimocarli.android.ugho">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <!-- activity android:name=".FirstAccessActivity" android:process=":other_process"/-->
        <activity android:name="uk.co.massimocarli.android.ugho.FirstAccessActivity"/>
        <activity android:name="uk.co.massimocarli.android.ugho.MenuActivity"/>
        <activity android:name="uk.co.massimocarli.android.ugho.NewDataActivity"/>
        <activity android:name="uk.co.massimocarli.android.ugho.InputDataActivity"/>
        <activity android:name="uk.co.massimocarli.android.ugho.LocalDataActivity"/>
        <activity android:name="uk.co.massimocarli.android.ugho.RemoteDataActivity"/>
        <activity android:label="@string/app_name" android:name="uk.co.massimocarli.android.ugho.TouchSplashActivity" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/login_activity_label" android:name="uk.co.massimocarli.android.ugho.LoginActivity">
            <intent-filter>
                <action android:name="uk.co.massimocarli.android.ugho.action.LOGIN_ACTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/register_activity_label" android:name="uk.co.massimocarli.android.ugho.RegisterActivity">
            <intent-filter>
                <action android:name="uk.co.massimocarli.android.ugho.action.REGISTRATION_ACTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/register_activity_label" android:name="uk.co.massimocarli.android.ugho.ShowUserDataActivity">
            <intent-filter>
                <action android:name="uk.co.massimocarli.android.ugho.action.SHOW_USER_ACTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
